{
  "version": 2,
  "buildCommand": "npm run build:frontend",
  "installCommand": "npm install && cd frontend && npm install",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "functions": {
    "backend/api/index.ts": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
} 